                            FontAttributes="Bold"
                            Text="  10:20 PM"
                            TextColor="Black" />
                        <Label Text="    1h 40m" TextColor="Black" />
                        <Label Text="    5J 571" TextColor="Black" />
                        <Label
                            Padding="200,0,0,0"
                            FontAttributes="Bold"
                            Text="PHP 4,717.72"
                            TextColor="Black" />
                    </HorizontalStackLayout>
                </Frame>

                <StackLayout Grid.Row="1">
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                        <Frame
                            Grid.Column="0"
                            Background="White"
                            HeightRequest="190">
                            <StackLayout>
                                <Label 
                                    Text="Economy" 
                                    TextColor="Black" 
                                    FontAttributes="Bold" 
                                    HorizontalTextAlignment="Center"/>
