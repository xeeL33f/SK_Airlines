            BackgroundColor="White"
            BorderColor="Black"
            HeightRequest="400"
            WidthRequest="650">

            <Grid RowDefinitions="*,*">
                <Frame
                    Grid.Row="0"
                    Margin="0,0,0,118.5"
                    BackgroundColor="White"
                    BorderColor="Black"
                    CornerRadius="10"
                    HeightRequest="100"
                    WidthRequest="650">
                    <HorizontalStackLayout>
                        <Label
                            FontAttributes="Bold"
                            Text="8:45 PM"
                            TextColor="Black" />
