                                    Text="* Lowest fares for your travel budget" 
                                    TextColor="Black" 
                                    FontSize="8"/>
                                <Label 
                                    Text="* Free cabin baggage allowance" 
                                    TextColor="Black" 
                                    FontSize="8"/>
                                <Label 
                                    Text="* Complimentary snacks, drinks and entertainment" 
                                    TextColor="Black" 
                                    FontSize="8"/>
                                <Label 
                                    Text="* Earn Air miles for rewards" 
                                    TextColor="Black" 
                                    FontSize="8"/>
                                <Label 
                                    Text="* Seat Pitch 28:34in, seat width: 16.33in" 
                                    TextColor="Black" 
                                    FontSize="8"/>
                                <Button 
                                    Text="Select" 
                                    HorizontalOptions="Center" 
                                    WidthRequest="150"  
                                    Background="#149bcc" 
                                    Margin="0,8,0,0" 
                                    Clicked="OnButtonClicked"/>
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalTextAlignment="Center"
                                    Text="Economy"
                                    TextColor="Black" />
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalTextAlignment="Center"
                                    Text="Php 4,717.72"
                                    TextColor="#149bcc" />
                                <Label
                                    FontSize="8"
                                    Text="* Lowest fares for your travel budget"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Free cabin baggage allowance"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Complimentary snacks, drinks and entertainment"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Earn Air miles for rewards"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Seat Pitch 28:34in, seat width: 16.33in"
                                    TextColor="Black" />
                                <Button
                                    Margin="0,8,0,0"
                                    Background="#149bcc"
                                    Clicked="OnButtonClicked"
                                    HorizontalOptions="Center"
                                    Text="Select"
                                    WidthRequest="150" />

                            </StackLayout>
                        </Frame>
                        <Frame
                            Grid.Column="1"
                            Background="White"
                            HeightRequest="190">
                            <StackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalTextAlignment="Center"
                                    Text="Business"
                                    TextColor="Black" />
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalTextAlignment="Center"
                                    Text="Php 6,200.20"
                                    TextColor="#149bcc" />
                                <Label
                                    FontSize="8"
                                    Text="* Lowest fares for your travel budget"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Free cabin baggage allowance"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Complimentary snacks, drinks and entertainment"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Earn Air miles for rewards"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Seat Pitch 28:34in, seat width: 16.33in"
                                    TextColor="Black" />
                                <Button
                                    Margin="0,5,0,0"
                                    Background="#149bcc"
                                    HorizontalOptions="Center"
                                    Text="Select"
                                    WidthRequest="150"
                                    Clicked="OnButtonClicked"/>
                            </StackLayout>
                        </Frame>
                        <Frame
                            Grid.Column="2"
                            Background="White"
                            HeightRequest="190">
                            <StackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalTextAlignment="Center"
                                    Text="First Class"
                                    TextColor="Black" />
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalTextAlignment="Center"
                                    Text="Php 7,717.98"
                                    TextColor="#149bcc" />
                                <Label
                                    FontSize="8"
                                    Text="* Expensive fares for your travels"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Free cabin baggage allowance"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* First class experience"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Earn Air miles for rewards"
                                    TextColor="Black" />
                                <Label
                                    FontSize="8"
                                    Text="* Seat Pitch 28:34in, seat width: 20.33in"
                                    TextColor="Black" />
                                <Button
                                    Margin="0,15,0,0"
                                    Background="#149bcc"
                                    HorizontalOptions="Center"
                                    Text="Select"
                                    WidthRequest="150"
                                    Clicked="OnButtonClicked"/>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </StackLayout>
            </Grid>

