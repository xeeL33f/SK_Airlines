<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SK_Airlines_App.AdminLoginPage"
             Title="AdminLoginPage">

    <Grid VerticalOptions="Center">
        <Image Source="airport_terminal.jpg" Aspect="AspectFill"/>
        <Frame CornerRadius="20" HeightRequest="400" WidthRequest="600" BackgroundColor="DarkCyan">
            <StackLayout Spacing="10">
                <Label Text="Admin Login" FontSize="25" HorizontalOptions="Center"/>
                <Label Text="Email" Margin="80,0,0,0"/>
                <Entry x:Name="emailAdmin" Placeholder="Email" WidthRequest="400" />
                <Label Text="Password" Margin="80,0,0,0"/>
                <Entry x:Name="passAdmin" Placeholder="Password" WidthRequest="400" IsPassword="True"/>

                <!-- **Login Button** -->
                <Button Text="Login" WidthRequest="400" BackgroundColor="#149bcc" Clicked="OnButtonClicked"/>
                <Label x:Name="labelAdminValidate" TextColor="Red" HorizontalTextAlignment="Center"/>

            </StackLayout>
        </Frame>
    </Grid>
    
</ContentPage>