    <StackLayout>
        <HorizontalStackLayout>
            <Label Text="Placeholder-Placeholder" FontSize="20" Padding="10"/>
            <Label Text="Book Flight" FontSize="20" Padding="80,10,0,0" FontAttributes="Bold" TextColor="#149bcc"/>
