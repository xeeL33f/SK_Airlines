                        <Label Text="    1h 40m" TextColor="Black" />
                        <Label Text="    5J 571" TextColor="Black" />
                        <Label Text="PHP 4,717.72" TextColor="Black" Padding="180,0,0,0" FontAttributes="Bold"/>
                    </HorizontalStackLayout>
                    <Frame.GestureRecognizers>
